<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="750.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa 0%, #c3cfe2 100%);"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.EmulatorController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">

            <!-- Заголовок -->
            <Label text="Эмулятор RISC-процессора" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;">
                <font>
                    <Font size="24.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>

            <HBox alignment="TOP_CENTER" spacing="25" prefHeight="650.0">

                <!-- Левая панель - Код и управление -->
                <VBox spacing="20" prefWidth="650.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-border-width: 1; -fx-padding: 20;">

                    <!-- Блок кода -->
                    <VBox spacing="8">
                        <Label text="Программа" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="codeTextArea" prefHeight="180.0" prefWidth="610.0"
                                  style="-fx-border-color: #95a5a6; -fx-border-radius: 4; -fx-background-radius: 4; -fx-font-family: 'Consolas', monospace;"
                                  promptText="Введите код ассемблера здесь..."/>
                    </VBox>

                    <!-- Панель управления -->
                    <VBox spacing="12">
                        <Label text="Управление" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>

                        <!-- Первая строка кнопок -->
                        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 0 20;">
                            <Button fx:id="loadIntoMemoryButton" text="Загрузить в память"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;"
                                    prefWidth="140" prefHeight="32"/>
                            <Button fx:id="startButton" text="Старт"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;"
                                    prefWidth="80" prefHeight="32"/>
                            <Button fx:id="nextButton" text="Следующий"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;"
                                    prefWidth="100" prefHeight="32"/>
                            <Button fx:id="resetButton" text="Сброс"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;"
                                    prefWidth="80" prefHeight="32"/>
                        </HBox>

                        <!-- Вторая строка кнопок -->
                        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 0 40;">
                            <ToggleButton fx:id="trapToggleButton" text="Пошаговый режим"
                                          style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;"
                                          prefWidth="140" prefHeight="32"/>
                            <ToggleButton fx:id="supervisorToggleButton" text="Режим супервизора"
                                          style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;"
                                          prefWidth="150" prefHeight="32"/>
                        </HBox>
                    </VBox>

                    <!-- Регистры и состояние -->
                    <GridPane vgap="12" hgap="20">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" prefWidth="280"/>
                            <ColumnConstraints hgrow="SOMETIMES" prefWidth="280"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints prefHeight="35"/>
                            <RowConstraints prefHeight="150"/>
                            <RowConstraints prefHeight="35"/>
                            <RowConstraints prefHeight="50"/>
                        </rowConstraints>

                        <!-- Заголовки -->
                        <Label text="Целочисленные регистры" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label text="Вещественные регистры" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <!-- Списки регистров -->
                        <ListView fx:id="intRegsListView" style="-fx-border-color: #bdc3c7; -fx-border-radius: 4; -fx-font-family: 'Consolas', monospace;"
                                  GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <ListView fx:id="floatRegsListView" style="-fx-border-color: #bdc3c7; -fx-border-radius: 4; -fx-font-family: 'Consolas', monospace;"
                                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <!-- Program Counter и Status -->
                        <Label text="Счетчик программ" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label text="Статусы флагов" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <ListView fx:id="programCounterListView" style="-fx-border-color: #bdc3c7; -fx-border-radius: 4; -fx-font-family: 'Consolas', monospace;"
                                  GridPane.columnIndex="0" GridPane.rowIndex="3"/>

                        <!-- Блок статуса (как в оригинале) -->
                        <VBox spacing="5" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <ListView fx:id="statusListView" style="-fx-border-color: #bdc3c7; -fx-border-radius: 4; -fx-font-family: 'Consolas', monospace; -fx-font-weight: bold; -fx-pref-width: 200; -fx-pref-height: 30;"/>
                            <Label text="–    U    T    I    O    C    S    Z" style="-fx-font-family: 'Consolas', monospace; -fx-text-fill: #2c3e50; -fx-font-size: 12; -fx-padding: 0 40 0 0;"/>                  </VBox>
                    </GridPane>

                </VBox>

                <!-- Правая панель - Память -->
                <VBox spacing="12" prefWidth="450.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-border-width: 1; -fx-padding: 20;">
                    <Label text="Память" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <ListView fx:id="memoryListView" prefHeight="580.0" prefWidth="410.0"
                              style="-fx-border-color: #bdc3c7; -fx-border-radius: 4; -fx-font-family: 'Consolas', monospace;"/>
                </VBox>

            </HBox>

            <!-- Статус бар -->
            <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #ecf0f1; -fx-background-radius: 4; -fx-padding: 8; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 4;">
                <Label text="RISC Processor Emulator | Архитектура вычислительных систем"
                       style="-fx-text-fill: #2c3e50; -fx-font-style: italic;"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>